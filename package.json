{
	"name": "keizai-ui",
	"description": "Postman-inspired tool that takes Soroban smart contract testing to the next level.",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"start:prod": "vite preview",
		"start:dev": "vite",
		"build": "vite build",
		"lint": "eslint \"src/**/*.{js,jsx,ts,tsx,json}\" \"cypress/**/*.{js,jsx,ts,tsx,json}\" \"./*.{js,cjs,ts,json}\" --fix",
		"format": "prettier \"src/**/*.{js,jsx,ts,tsx,json}\" \"cypress/**/*.{js,jsx,ts,tsx,json}\" \"./*.{js,cjs,ts,json}\" --write",
		"cy:open": "cypress open",
		"cy:run": "cypress run",
		"cy:serve:ci": "start-server-and-test start:dev http-get://127.0.0.1:3000 cy:run",
		"cy:serve:app": "start-server-and-test start:dev http-get://127.0.0.1:3000 cy:open",
		"nyc:report": "npx nyc report --reporter text",
		"test:ui": "run-s cy:serve:ci nyc:report",
		"test:ui:dev": "run-s cy:serve:app nyc:report",
		"prepare": "husky install"
	},
	"lint-staged": {
		"src/**/*.{js,jsx,ts,tsx,json}": [
			"eslint --fix",
			"prettier --write"
		],
		"./*.{js,ts,json}": [
			"eslint --fix",
			"prettier --write"
		]
	},
	"dependencies": {
		"@monaco-editor/react": "^4.6.0",
		"@radix-ui/react-accordion": "^1.2.0",
		"@radix-ui/react-alert-dialog": "^1.1.1",
		"@radix-ui/react-dialog": "^1.1.1",
		"@radix-ui/react-dropdown-menu": "^2.1.1",
		"@radix-ui/react-select": "^2.1.1",
		"@radix-ui/react-slot": "^1.1.0",
		"@radix-ui/react-tabs": "^1.1.0",
		"@radix-ui/react-toast": "^1.2.1",
		"@radix-ui/react-tooltip": "^1.1.2",
		"@tanstack/react-query": "^5.51.23",
		"@types/umami": "^0.1.5",
		"axios": "^1.7.4",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.1",
		"cross-env": "^7.0.3",
		"cypress-real-events": "^1.13.0",
		"flagsmith": "^3.22.1",
		"jwt-decode": "^4.0.0",
		"localforage": "^1.10.0",
		"lodash.debounce": "^4.0.8",
		"lucide-react": "^0.427.0",
		"match-sorter": "^6.3.4",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-hook-form": "^7.52.2",
		"react-query": "^3.39.3",
		"react-router-dom": "^6.26.0",
		"react-simple-code-editor": "^0.13.1",
		"sort-by": "^0.0.2",
		"stellar-sdk": "^11.0.1",
		"tailwind-merge": "^1.14.0",
		"tailwindcss-animate": "^1.0.7",
		"universal-cookie": "^7.2.0",
		"use-debounce": "^10.0.2"
	},
	"devDependencies": {
		"@cypress/code-coverage": "^3.12.45",
		"@trivago/prettier-plugin-sort-imports": "^1.4.4",
		"@types/jest": "^29.5.12",
		"@types/lodash.debounce": "^4.0.9",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@typescript-eslint/eslint-plugin": "^5.57.1",
		"@typescript-eslint/parser": "^5.57.1",
		"@vitejs/plugin-react": "^4.3.1",
		"autoprefixer": "^10.4.20",
		"cypress": "^13.13.3",
		"dotenv": "^16.4.5",
		"eslint": "^8.38.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react-hooks": "^4.6.2",
		"eslint-plugin-react-refresh": "^0.3.4",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.41",
		"prettier": "2.8.8",
		"start-server-and-test": "^2.0.5",
		"tailwind-scrollbar": "^3.1.0",
		"tailwindcss": "^3.4.10",
		"typescript": "4.9.5",
		"vite": "^4.3.2",
		"vite-plugin-istanbul": "^4.0.1"
	}
}
